<Window x:Class="WpfAsyncProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAsyncProgressBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar x:Name="myProgress" Minimum="0" Maximum="100" HorizontalAlignment="Left" Height="15" Margin="250,144,0,0" VerticalAlignment="Top" Width="295"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Center" Margin="0,229,0,0" VerticalAlignment="Top" Height="35" Width="70"/>
    </Grid>
</Window>
